*.swo
*~

# Maven / Java
target/
*.class
*.jar
*.war
*.ear
hs_err_pid*
.mvn/repository/
.m2/

# Python
__pycache__/
*.py[cod]
*$py.class
*.so
.Python
build/
develop-eggs/
dist/
downloads/
eggs/
.eggs/
lib/
lib64/
parts/
sdist/
var/
wheels/
*.egg-info/
.installed.cfg
*.egg
.venv/
venv/
ENV/

# Jupyter Notebooks
.ipynb_checkpoints/
*.ipynb_checkpoints

# ============================================================================
# SENSITIVE - NEVER COMMIT
# ============================================================================

# Environment files (contain secrets)
.env
.env.local
.env.*.local
*.env
!.env.example
!*.env.example

# Config files that may contain secrets
config/*.yaml
config/*.yml
!config/*.example.yaml
!config/*.example.yml

# Monitoring secrets
monitoring/.env
!monitoring/.env.example

# Private keys / credentials
*.pem
*.key
*.p12
*.pfx
credentials.json
secrets.json

# ============================================================================
# Research Data (user-specific, potentially large)
# ============================================================================
research/data/
research/output/
*.parquet
*.feather
!research/data/.gitkeep

# ============================================================================
# Runtime / Generated
# ============================================================================
logs/
!logs/.gitkeep
.cache/
*.log
*.tmp
*.temp

# Docker
docker-compose.override.yml

# Local testing
test-output/
coverage/
.coverage
htmlcov/
